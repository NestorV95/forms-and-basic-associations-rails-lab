<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br><br>
  <%= f.label :song_genre %><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br><br>
  <%= f.label "Song notes" %><br>
  <input type="text" name="note_contents[]" id="song_notes_1"><br>
  <input type="text" name="note_contents[]" id="song_notes_2"><br>
  <input type="text" name="note_contents[]" id="song_notes_3"><br>
  <%= f.submit %>
<% end %>


